{
  "name": "@dan-schel/js-utils",
  "version": "3.2.2",
  "description": "A library for code common to my various NodeJS/Browser projects.",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "umd:main": "dist/umd/index.js",
  "types": "dist/types/index.d.ts",
  "scripts": {
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "build": "npm run build:cjs && npm run build:esm && npm run build:umd && npm run build:types",
    "build:cjs": "tsc -p config/tsconfig.cjs.json",
    "build:esm": "tsc -p config/tsconfig.esm.json",
    "build:umd": "webpack --config config/webpack.config.js",
    "build:types": "tsc -p config/tsconfig.types.json",
    "package": "npm run build && npm pack",
    "test": "jest",
    "test-coverage": "jest --coverage",
    "lint": "eslint . --max-warnings 0",
    "format": "prettier --write ."
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "utils",
    "javascript"
  ],
  "author": "dan-schel",
  "license": "MIT",
  "homepage": "https://github.com/dan-schel/js-utils",
  "repository": {
    "type": "git",
    "url": "git@github.com:dan-schel/js-utils.git"
  },
  "bugs": {
    "url": "https://github.com/dan-schel/js-utils/issues"
  },
  "dependencies": {
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.2.0",
    "prettier": "^2.4.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^27.0.5",
    "ts-loader": "^9.2.5",
    "typescript": "^4.4.3",
    "webpack": "^5.52.1",
    "webpack-cli": "^5.0.0"
  }
}
