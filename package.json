{
  "name": "@dan-schel/js-utils",
  "version": "3.3.9",
  "description": "A library for code common to my various NodeJS/Browser projects.",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "umd:main": "dist/umd/index.js",
  "types": "dist/types/index.d.ts",
  "type": "module",
  "scripts": {
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "build": "npm run build:cjs && npm run build:esm && npm run build:umd && npm run build:types",
    "build:cjs": "tsc -p config/tsconfig.cjs.json",
    "build:esm": "tsc -p config/tsconfig.esm.json",
    "build:umd": "webpack --config config/webpack.config.js",
    "build:types": "tsc -p config/tsconfig.types.json",
    "package": "npm run build && npm pack",
    "test": "vitest --run",
    "test-coverage": "vitest --run --coverage",
    "lint": "eslint . --max-warnings 0",
    "format": "prettier --write .",
    "format-check": "prettier --check ."
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "utils",
    "javascript"
  ],
  "author": "dan-schel",
  "license": "MIT",
  "homepage": "https://github.com/dan-schel/js-utils",
  "repository": {
    "type": "git",
    "url": "git@github.com:dan-schel/js-utils.git"
  },
  "bugs": {
    "url": "https://github.com/dan-schel/js-utils/issues"
  },
  "dependencies": {
    "uuid": "11.1.0"
  },
  "devDependencies": {
    "@eslint/js": "9.25.1",
    "@types/uuid": "10.0.0",
    "@vitest/coverage-v8": "3.1.2",
    "eslint": "9.25.1",
    "eslint-config-prettier": "10.1.2",
    "eslint-plugin-prettier": "5.2.6",
    "prettier": "3.5.3",
    "rimraf": "6.0.1",
    "ts-loader": "9.5.2",
    "typescript": "5.8.3",
    "typescript-eslint": "8.31.0",
    "vitest": "3.1.2",
    "webpack": "5.99.6",
    "webpack-cli": "6.0.1"
  }
}
