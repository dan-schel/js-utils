{
  "name": "@dan-schel/js-utils",
  "version": "4.0.0",
  "description": "A library for code common to my various NodeJS/Browser projects.",
  "exports": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "rm -rf dist && tsc -p tsconfig.json",
    "package": "npm run build && npm pack",
    "test": "vitest --run",
    "test-coverage": "vitest --run --coverage",
    "lint": "eslint . --max-warnings 0 && tsc -p tsconfig.json --noEmit",
    "format": "prettier --write .",
    "format-check": "prettier --check ."
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "utils",
    "javascript"
  ],
  "author": "dan-schel",
  "license": "MIT",
  "homepage": "https://github.com/dan-schel/js-utils",
  "repository": {
    "type": "git",
    "url": "git@github.com:dan-schel/js-utils.git"
  },
  "bugs": {
    "url": "https://github.com/dan-schel/js-utils/issues"
  },
  "dependencies": {
    "uuid": "11.1.0"
  },
  "devDependencies": {
    "@eslint/js": "9.25.1",
    "@types/node": "22.15.2",
    "@types/uuid": "10.0.0",
    "@vitest/coverage-v8": "3.1.2",
    "eslint": "9.25.1",
    "eslint-config-prettier": "10.1.2",
    "eslint-plugin-prettier": "5.2.6",
    "prettier": "3.5.3",
    "typescript": "5.8.3",
    "typescript-eslint": "8.31.0",
    "vitest": "3.1.2"
  }
}
